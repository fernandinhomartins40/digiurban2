# 🗄️ Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/digiurban_db

# 🚀 Server Configuration  
PORT=3000
NODE_ENV=production

# 🔐 Security
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters
JWT_EXPIRES_IN=7d

# 🌐 CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.up.railway.app

# 📧 Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# 📁 File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# 🔍 Monitoring (Optional)
ENABLE_LOGGING=true
LOG_LEVEL=info 